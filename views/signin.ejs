                    <form action="/signIn" method="POST">
                        <div class="form-group"><label class="text-secondary">Email</label><input class="form-control" name="username" type="text" required="" type="email" inputmode="email"></div>
                        <div class="form-group"><label class="text-secondary">Password</label><input class="form-control" type="password" name="password" required=""></div><button class="btn btn-info mt-2" type="submit" style="background-color: beige;color: black;width: 80%;margin-left: 10%;"
                            align="center">Sign in</button></form>
                    <p class="mt-3 mb-0"><a class="text-info small" href="/signup">Don't have an account?</a></p>
                </div>
            </div>
            <div class="col-lg-6 d-flex align-items-end" id="bg-block" style="background-image: url(&quot;signinAssets/img/luke-stackpoole-ZRsJmpt9pNI-unsplash.jpg&quot;);background-size: cover;background-position: center center;">
